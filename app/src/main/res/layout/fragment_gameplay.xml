<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Character header -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_class_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class â€¢ Lv 1" />
                        </LinearLayout>

                        <!-- HP controls -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_hp_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HP" />

                            <TextView
                                android:id="@+id/tv_hp_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 / 10"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Amount">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_hp_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textAlignment="center" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_take_damage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Damage"
                            android:backgroundTint="#C62828" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_heal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="#2E7D32"
                            android:text="Heal" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Character stats -->
                    <TextView
                        android:id="@+id/tv_stats_label"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/character_stats"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_strength_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STR: 10" />

                        <TextView
                            android:id="@+id/tv_dexterity_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEX: 10" />

                        <TextView
                            android:id="@+id/tv_constitution_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CON: 10" />

                        <TextView
                            android:id="@+id/tv_intelligence_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INT: 10" />

                        <TextView
                            android:id="@+id/tv_wisdom_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WIS: 10" />

                        <TextView
                            android:id="@+id/tv_charisma_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHA: 10" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Update character button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/edit_character"
                app:strokeColor="@android:color/black"
                app:strokeWidth="1dp" />

            <!-- Spell slots -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_long_rest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Long Rest"
                app:strokeColor="@android:color/black"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/tv_spell_slots_label"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/spell_slots"
                android:textSize="16sp" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_spell_slots_gameplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignmentMode="alignMargins"
                app:columnCount="4"
                app:useDefaultMargins="true" />

            <!-- Long rest button -->
        </LinearLayout>
    </ScrollView>
</FrameLayout>